{
  "configurations": [
    {
      "_comment": "chinese symbol support in comment 中文符号",
      "language": "c++",
      "defaultProfile": "Debug",
      "defaultProjectModelConfiguration": {
        "command": {
          "workingDirectory": "build",
          "command": "cmake",
          "arguments": [
            "-GNinja",
            "-DCMAKE_BUILD_TYPE=Debug",
            "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
            "../"
          ]
        },
        "dockerContainer": {
          "image": "cpp-build-tool-worker",
          "cpus": 1.0,
          "memory": "1G"
        },
        "artifacts": [],
        "compileCommandsLocation": "build/compile_commands.json"
      },
      "defaultCodeModelConfiguration": {
        "indexAllSymbols": false,
        "numberOfIndexingThreads": 4,
        "dockerContainer": {
          "image": "clangd-indexer-worker",
          "cpus": 1.0,
          "memory": "1G"
        }
      },
      "compilationProfiles": [
        {
          "name": "Release",
          "description": "",
          "projectModelConfiguration": {
            "command": {
              "workingDirectory": "build",
              "command": "sh",
              "arguments": [
                "../configuration/projectModel/build_project.sh",
                "Release"
              ]
            },
            "dockerContainer": {
              "image": "cpp-build-tool-worker",
              "cpus": 1.0,
              "memory": "1G"
            },
            "artifacts": ["build/generated_sources"],
            "compileCommandsLocation": "build/compile_commands.json"
          }
        },
        {
          "name": "Debug",
          "description": "",
          "projectModelConfiguration": {
            "command": {
              "workingDirectory": "build",
              "command": "sh",
              "arguments": [
                "../configuration/projectModel/build_project.sh",
                "Debug"
              ]
            },
            "dockerContainer": {
              "image": "cpp-build-tool-worker",
              "cpus": 1.0,
              "memory": "1G"
            },
            "artifacts": ["build/generated_sources"],
            "compileCommandsLocation": "build/compile_commands.json"
          }
        }
      ]
    }
  ]
}
